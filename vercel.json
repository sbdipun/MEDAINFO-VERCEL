{
  "version": 2,
  "functions": {
    "api/mediainfo.js": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "node_modules/mediainfo.js/dist/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/mediainfo",
      "destination": "/api/mediainfo.js"
    },
    {
      "source": "/(.*)",
      "destination": "/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ],
  "cleanUrls": true
}